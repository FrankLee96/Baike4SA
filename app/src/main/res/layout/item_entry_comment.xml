<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical">
    <TextView
        android:id="@+id/entry_comment_user_name"
        android:textColor="#000000"
        android:textStyle="bold"
        android:text="用户名"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/entry_comment_user_name"
        android:id="@+id/entry_comment_user_comment"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="用户评论：abcdefghijklmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@id/entry_comment_user_comment"
        android:id="@+id/entry_comment_date"
        android:layout_marginTop="10dp"
        android:text="11-30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_like"/>

</RelativeLayout>
